<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateProjectActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:orientation="vertical"
        >


    <EditText
        android:id="@+id/newPtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_button"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:hint="Title" />


    <EditText
        android:id="@+id/newPnotes"
        android:layout_width="match_parent"
        android:background="@drawable/test_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:hint="Notes" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="Difficulty" />

    <RadioGroup
        android:id="@+id/projectDifficulty"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:layout_marginRight="25dp"
             />

        <RadioButton
            android:id="@+id/Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:layout_marginRight="25dp"
            />

        <RadioButton
            android:id="@+id/Hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
             />

    </RadioGroup>

    <EditText
        android:id="@+id/projectDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_button"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:hint="Deadline"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/iProjectBtn"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_button"
        android:text="Create Project" />

    <Button
        android:id="@+id/cinsertProjectBtn"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_button"
        android:text="Cancel" />

    </LinearLayout>

</LinearLayout>